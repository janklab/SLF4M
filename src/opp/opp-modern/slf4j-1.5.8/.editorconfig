# .editorconfig for the munged SLF4J code.
#
# EditorConfig is awesome: https://EditorConfig.org

root = false

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 8

[Makefile]
indent_style = tab
tab_width = 4

[*.xml]
indent_size = 2
# From looking at a couple example .xml files in the original upstream source.
# Dunno if it was intentional. -apj
tab_width = 4
